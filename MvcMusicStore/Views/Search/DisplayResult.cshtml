@model IEnumerable<MvcMusicStore.Models.Album>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Genre</th>
                <th>Artist</th>
                <th>Title</th>
                <th>Price</th>
                <th>AlbumArtUrl</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Genre.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Artist.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.AlbumArtUrl)</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "StoreManager", new { id = item.AlbumId }, null) |
                        @Html.ActionLink("Details", "Details", "StoreManager", new { id = item.AlbumId }, null) |
                        @Html.ActionLink("Delete", "Delete", "StoreManager", new { id = item.AlbumId }, null)
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
